[Unit]
Description=Persist Redirect Iptables rule for identity-server
Requires=metadata-server.service

[Service]
Type=oneshot
RemainAfterExit=yes

ExecStart=/usr/sbin/iptables -t nat -I OUTPUT 1 -m comment -m tcp --comment 'metadata.google.internal' -d 169.254.169.254 -p tcp --dport 80 -j REDIRECT --to-ports 8080

[Install]
WantedBy=multi-user.target
