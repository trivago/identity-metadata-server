  "version": "0.2.0",
  "configurations": [
    {
      "name": "metadata-server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/metadata-server",
      "args": [
        "--mode",
        "host",
        "--poolname",
        "integration-test",
        "--providername",
        "identity-server",
        "--host.clientcert",
        "${fileDirname}/mtls/generated/client-selfsigned.cert",
        "--host.clientkey",
        "${fileDirname}/mtls/generated/client-selfsigned.key",
        "--host.cacert",
        "${fileDirname}/mtls/generated/cacert.pem"
      ]
    },
    {
      "name": "identity-server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "cmd/identity-server",
      "args": [
        "--server.issuer",
        "https://identity-server",
        "--server.hostname",
        "integration-test",
        "--server.identity",
        "integration-test@trv-identity-server-testing.iam.gserviceaccount.com",
        "--server.workloadidentity.providername",
        "integration-test",
        "--server.key",
        "${fileDirname}/mtls/generated/client-selfsigned.key",
        "--tls.key",
        "${fileDirname}/mtls/generated/client-selfsigned.key",
        "--tls.certificate",
        "${fileDirname}/mtls/generated/client-selfsigned.cert"
      ]
    }
  ]
}
